<Window x:Class="Itel.WindowProfit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Itel"
        mc:Ignorable="d"
        Title="WindowProfit" Height="243.609" Width="300"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <StackPanel>
        <TextBlock Text="24-02-2018" FontSize="40" HorizontalAlignment="Center" Margin="4" Foreground="Red"
                    Name="TBdate" MouseRightButtonUp="TBdate_MouseRightButtonUp" MouseLeftButtonUp="TBdate_MouseLeftButtonUp"/>
        <TextBlock Text="Total Profit" FontSize="40" HorizontalAlignment="Center" Margin="0,4,0,0"/>
        <TextBlock Text="(1 day)" FontSize="12" HorizontalAlignment="Center" Margin="0,-5,0,8" Name="TBdaysCount"/>
        <TextBlock Text="0.0" FontSize="40" HorizontalAlignment="Center" Foreground="Green" Background="Yellow"
                   Name="TBprofit"/>
    </StackPanel>
</Window>
